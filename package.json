{
  "name": "kurly-monorepo",
  "scripts": {
    "build#tokens": "pnpm --filter @thefarmersfront/kpds-tokens build",
    "build#css": "pnpm --filter @thefarmersfront/kpds-css build",
    "build#react": "pnpm --filter @thefarmersfront/kpds-react build",
    "build": "pnpm build#tokens && pnpm build#css && pnpm build#react",
    "clean#tokens": "pnpm --filter @thefarmersfront/kpds-tokens clean",
    "clean#css": "pnpm --filter @thefarmersfront/kpds-css clean",
    "clean#react": "pnpm --filter @thefarmersfront/kpds-react clean",
    "clean": "pnpm clean#tokens && pnpm clean#css && pnpm clean#react"
  },
  "devDependencies": {
    "rimraf": "6.0.1",
    "turbo": "2.2.3",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vite-plugin-dts": "4.3.0"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
